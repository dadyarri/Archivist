<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="Archivist.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

  <Grid Padding="20">
    <Grid HorizontalAlignment="Center"
          MaxWidth="1200">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <Grid Width="1000"
            RowSpacing="20">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"></RowDefinition>
          <RowDefinition Height="Auto"></RowDefinition>
          <RowDefinition Height="Auto"></RowDefinition>
          <RowDefinition Height="Auto"></RowDefinition>
          <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="20" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Путь до хранилища Obsidian"
                   Style="{StaticResource BodyTextBlockStyle}"
                   VerticalAlignment="Center"
                   Grid.Column="0"
                   Grid.Row="0" />
        <TextBlock Text="{x:Bind ViewModel.VaultPath, Mode=OneWay}"
                   Style="{StaticResource BodyTextBlockStyle}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                   Grid.Column="2"
                   Grid.Row="0" />
        <Button Content="Выбрать папку"
                Command="{x:Bind ViewModel.SelectFolderCommand}"
                HorizontalAlignment="Center"
                Grid.Column="4"
                Grid.Row="0" />

        <TextBlock Text="Подпапка в хранилище"
                   Style="{StaticResource BodyTextBlockStyle}"
                   VerticalAlignment="Center"
                   Grid.Column="0"
                   Grid.Row="1" />
        <TextBlock Text="{x:Bind ViewModel.SubDirectoryPath, Mode=OneWay}"
                   Style="{StaticResource BodyTextBlockStyle}"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                   Grid.Column="2"
                   Grid.Row="1" />
        <Button Content="Выбрать папку"
                Command="{x:Bind ViewModel.SelectSubFolderCommand}"
                HorizontalAlignment="Center"
                Grid.Column="4"
                Grid.Row="1" />

        <TextBlock Text="Формат названия файла"
                   Style="{StaticResource BodyTextBlockStyle}"
                   VerticalAlignment="Center"
                   Grid.Column="0"
                   Grid.Row="2" />

        <TextBlock Text="{}{number} — номер сессии, {name} — название"
                   Style="{StaticResource BodyTextBlockStyle}"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                   Grid.Column="2"
                   Grid.Row="2" />

        <TextBox Text="{x:Bind ViewModel.FilenameFormat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Width="200"
                 HorizontalAlignment="Left"
                 Grid.Column="4"
                 Grid.Row="2" />

        <TextBlock Foreground="Red"
                   FontSize="12"
                   Visibility="{x:Bind ViewModel.FilenameFormatErrorVisibility, Mode=OneWay}"
                   HorizontalAlignment="Right"
                   Text="Недопустимые символы: * &quot; \ / : ? &lt;&gt;"
                   Grid.Column="4"
                   Grid.Row="3" />

        <TextBlock Text="Путь до исполняемого файла Python"
                   Style="{StaticResource BodyTextBlockStyle}"
                   VerticalAlignment="Center"
                   Grid.Column="0"
                   Grid.Row="4" />

        <TextBlock Text="{x:Bind ViewModel.PythonExecutablePath, Mode=OneWay}"
                   Style="{StaticResource BodyTextBlockStyle}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                   Grid.Column="2"
                   Grid.Row="4" />

        <Button Content="Выбрать файл"
                Command="{x:Bind ViewModel.SelectPythonExecutableCommand}"
                HorizontalAlignment="Center"
                Grid.Column="4"
                Grid.Row="4" />
      </Grid>
    </Grid>
    <Border x:Name="SaveNotification"
            Background="{ThemeResource SystemControlBackgroundAccentBrush}"
            CornerRadius="4"
            Padding="8"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Visibility="Collapsed">
      <TextBlock Text="Настройки сохранены"
                 Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
    </Border>
  </Grid>
</Page>
